<%= form_with(model: [post, discussion, answer], class: "contents") do |form| %>
  <div class="input-group mb-3">
    <%= form.text_area :body, class:"form-control", aria_describedby:"button-addon2", required: true  %>
    <%= form.submit "Send", class: "btn btn-primary",id:"button-addon2" %>
  </div>
<% end %>
