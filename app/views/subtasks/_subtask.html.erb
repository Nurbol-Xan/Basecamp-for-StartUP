<div id="<%= dom_id subtask %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Body:</strong>
    <%= subtask.body %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show", subtask, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit', edit_subtask_path(subtask), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
